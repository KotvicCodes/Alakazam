{
  "manifest_version": 3,
  "name": "Alakazam",
  "version": "1.0",
  "description": "Analyzes and optimizes Cookie Clicker strategy",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://orteil.dashnet.org/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://orteil.dashnet.org/cookieclicker/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}